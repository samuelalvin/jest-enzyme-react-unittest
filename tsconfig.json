{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "@types/react",
      "@types/react-dom",
      "@types/enzyme",
      "@types/enzyme-adapter-react-16",
      "@types/jest"
    ],
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./src/*.js",
    "./src/*.js.map"
  ]
}